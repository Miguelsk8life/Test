<Window x:Class="MyOfficeEquipmentInventory.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyOfficeEquipmentInventory.Views"
        xmlns:vm="clr-namespace:MyOfficeEquipmentInventory.ViewModels"
        xmlns:model="clr-namespace:MyOfficeEquipmentInventory.Models"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Office Equipment Manager" Height="450" Width="800">
   

    <Window.Resources>
        <ObjectDataProvider x:Key="EquipmentTypes" 
                            MethodName="GetValues" 
                            ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="model:EquipmentType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="StatusTypes" 
                            MethodName="GetValues" 
                            ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="model:StatusType" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Content="Add" Command="{Binding AddCommand}" Margin="5" Padding="10 5"/>
            <Button Content="Update" Command="{Binding UpdateCommand}" Margin="5" Padding="10 5"
                    IsEnabled="{Binding IsEquipmentSelected}"/>
            <Button Content="Delete" Command="{Binding DeleteCommand}" Margin="5" Padding="10 5"
                    IsEnabled="{Binding IsEquipmentSelected}"/>
        </StackPanel>

        <!-- Equipment List -->
        <DataGrid ItemsSource="{Binding Equipments}" SelectedItem="{Binding SelectedEquipment, Mode=TwoWay}" 
                  AutoGenerateColumns="False" Grid.Row="1" Margin="0 10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridComboBoxColumn Header="Type" 
                                       SelectedItemBinding="{Binding Type}" 
                                       ItemsSource="{Binding Source={StaticResource EquipmentTypes}}"
                                       Width="*"/>
                <DataGridComboBoxColumn Header="Status" 
                                       SelectedItemBinding="{Binding Status}" 
                                       ItemsSource="{Binding Source={StaticResource StatusTypes}}"
                                       Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Details -->
        <Grid Grid.Row="2" Margin="0 10 0 0" 
              Visibility="{Binding IsEquipmentSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Name:" Grid.Row="0" Grid.Column="0" Margin="5"/>
            <TextBox Text="{Binding SelectedEquipment.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     Grid.Row="0" Grid.Column="1" Margin="5"/>

            <TextBlock Text="Type:" Grid.Row="1" Grid.Column="0" Margin="5"/>
            <ComboBox SelectedItem="{Binding SelectedEquipment.Type}" 
                      ItemsSource="{Binding Source={StaticResource EquipmentTypes}}"
                      Grid.Row="1" Grid.Column="1" Margin="5"/>

            <TextBlock Text="Status:" Grid.Row="2" Grid.Column="0" Margin="5"/>
            <ComboBox SelectedItem="{Binding SelectedEquipment.Status}" 
                      ItemsSource="{Binding Source={StaticResource StatusTypes}}"
                      Grid.Row="2" Grid.Column="1" Margin="5"/>
        </Grid>
    </Grid>
</Window>